{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "customManagers:dockerfileVersions",
    ":disableRateLimiting",
    ":reviewer(Flo0807)",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "mix"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "groupName": "Elixir Image",
      "matchDepNames": [
        "elixir",
        "erlang",
        "ubuntu"
      ]
    },
    {
      "matchDepNames": [
        "ubuntu"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest"
      ]
    }
  ],
  "labels": [
    "dependencies",
    "{{categories}}"
  ]
}
